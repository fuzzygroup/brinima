<footer class="site-footer h-card">
  <data class="u-url" href="{{ "/" | relative_url }}"></data>

  <div class="wrapper">

    <div class="footer-col-wrapper">
      <div class="footer-col">
        <p class="feed-subscribe">
          <a href="{{ 'feed.xml' | relative_url }}">
            <svg class="svg-icon orange">
              <use xlink:href="{{ 'assets/minima-social-icons.svg#rss' | relative_url }}"></use>
            </svg><span>Subscribe</span>
          </a>
        </p>
      {%- if metadata.author %}
        <ul class="contact-list">
          {% if metadata.author.name -%}
            <li class="p-name">{{ metadata.author.name | escape }}</li>
          {% endif -%}
          {% if metadata.author.email -%}
            <li><a class="u-email" href="mailto:{{ site.author.email }}">{{ metadata.author.email }}</a></li>
          {%- endif %}
        </ul>
      {%- endif %}
      </div>
      <div class="footer-col">
        <p>{{ metadata.description | escape }}</p>
      </div>
    </div>

    <div class="social-links">
      {%- render social.liquid -%}
    </div>

  </div>

</footer>
